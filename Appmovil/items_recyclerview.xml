<?xml version="1.0" encoding="utf-8"?>
<!-- LinearLayout que contiene CADA cuadradito de producto -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/items"
    android:backgroundTint="@color/blancocremita"

    android:orientation="vertical"
    android:padding="12dp">


    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_edittext"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <!-- TextView para el nombre del producto -->
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Nombre Producto"
        android:textColor="@color/azulsifer"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- TextView para el stock -->
    <TextView
        android:id="@+id/txtStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Stock: 15"
        android:textColor="@color/azulsifer"
        android:textSize="12sp" />

</LinearLayout>